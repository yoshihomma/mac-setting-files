{
  "title": "Bridge to Windows Shortcuts",
  "rules": [
    {
      "description": "cmd+c <=> ctrl+c",
      "manipulators": [
        {
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["command"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^com\\.googlecode\\.iterm2$"]
            }
          ]
        },
        {
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["control"]
            }
          ],
          "type": "basic",
          "conditions": [
